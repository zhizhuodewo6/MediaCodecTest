<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <EditText
                android:id="@+id/mEtInitBr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="init br"
                android:inputType="number"
                android:text="500"
                />

        <EditText
                android:id="@+id/mEtBrStep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="br step"
                android:inputType="number"
                android:text="50"
                />

        <EditText
                android:id="@+id/mEtQuality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="quality"
                android:inputType="number"
                android:text="50"
                />

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/mSpBitrateMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <CheckBox
                android:id="@+id/mCbUpdateBr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update BR"
                />

        <CheckBox
                android:id="@+id/mCbAsyncEnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Async Encoder"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <Button
                android:id="@+id/mBtnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="start"
                />
        <Button
            android:id="@+id/mBtnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="stop"
            />

        <TextView
                android:id="@+id/mTvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

    <org.webrtc.SurfaceViewRenderer
            android:id="@+id/mSurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    <com.github.piasy.mediacodecrctest.chart.EchartView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</LinearLayout>
